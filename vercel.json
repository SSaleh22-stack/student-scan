{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/[[...path]].ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/[[...path]]?path=$1"
    },
    {
      "source": "/((?!api|assets|favicon.ico|robots.txt).*)",
      "destination": "/index.html"
    }
  ]
}

